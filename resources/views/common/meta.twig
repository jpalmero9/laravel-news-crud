		  href="{{ asset('vendor/news-crud/img/meta/apple-touch-icon-76x76.png') }}">
	<link rel="apple-touch-icon" sizes="114x114"
		  href="{{ asset('vendor/news-crud/img/meta/apple-touch-icon-114x114.png') }}">
	<link rel="apple-touch-icon" sizes="120x120"
		  href="{{ asset('vendor/news-crud/img/meta/apple-touch-icon-120x120.png') }}">
	<link rel="apple-touch-icon" sizes="144x144"
