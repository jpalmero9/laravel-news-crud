<!DOCTYPE html>
<html lang="{{ app.getLocale }}" prefix="{{ meta.prefix }}">
<head>
	<meta charset="{{ meta.charset }}">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="HandheldFriendly" content="true">
	<meta name="csrf-token" content="{{ csrf_token() }}">

	<meta http-equiv="cache-control" content="max-age=0">
	<meta http-equiv="cache-control" content="no-cache">
	<meta http-equiv="expires" content="0">
	<meta http-equiv="expires" content="Tue, 01 Jan 1981 1:00:00 GMT">
	<meta http-equiv="pragma" content="no-cache">

	<title>{{ meta.title }}</title>
	<meta property="og:title" content="{{ meta.title }}">
	<meta property="vk:title" content="{{ meta.title }}">
	{% if meta.keywords %}
		<meta name="keywords" content="{{ meta.keywords }}">
		<meta property="og:keywords" content="{{ meta.keywords }}">
		<meta property="vk:keywords" content="{{ meta.keywords }}">
	{% endif %}
	{% if meta.description %}
		<meta name="description" content="{{ meta.description }}">
		<meta property="og:description" content="{{ meta.description }}">
		<meta property="vk:description" content="{{ meta.description }}">
	{% endif %}
	{% for img in meta.images %}
		<link rel="image_src" href="{{ img.url }}">
		<meta property="og:image" content="{{ img.url }}">
		<meta property="vk:image" content="{{ img.url }}">
		{% if type in img.type %}
			<meta property="og:image:type" content="{{ type }}">
		{% endif %}
		{% if width in img.width %}
			<meta property="og:image:type" content="{{ width }}">
		{% endif %}
		{% if height in img.height %}
			<meta property="og:image:type" content="{{ height }}">
		{% endif %}
	{% endfor %}
	<meta property="og:url" content="{{ meta.url_current }}">
	<meta property="vk:url" content="{{ meta.url_current }}">
	<link rel="canonical" href="{{ meta.url_current }}">
	{% if meta.product is not empty -%}
		{% for property, content in meta.product -%}
			<meta property="{{ property }}" content="{{ content }}">
		{% endfor -%}
	{%- endif %}
	<link rel="shortcut icon" href="{{ asset('vendor/news-crud/img/meta/favicon.ico') }}" type="image/x-icon">
	<link rel="apple-touch-icon" sizes="57x57"
		  href="{{ asset('vendor/news-crud/img/meta/apple-touch-icon-57x57.png') }}">
	<link rel="apple-touch-icon" sizes="60x60"
		  href="{{ asset('vendor/news-crud/img/meta/apple-touch-icon-60x60.png') }}">
